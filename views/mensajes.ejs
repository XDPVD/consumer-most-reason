<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Lista de mensajes</title>
  </head>

  <body>

    <header class="border w-100" style="background: #f46e6e">
      <!-- Navbar -->
      <div class='row'>
        <div class="col-8">
          <img class="cover d-block w-25" src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Facademiacesarvallejo.edu.pe%2Fwp-content%2Fuploads%2F2016%2F03%2Flogo.png&f=1&nofb=1">
        </div>
        <div class="col-4 d-flex justify-content-center ">
          <p class="fs-5 fst-italic m-0">
            Departamento de atencion al cliente
          </p>
        </div>
      </div>
    </header>

    <main class="row mw-100" style="height: 100vh;">
      <div class="col-3 p-0" style="background: #fcd9d9">
        <div class="d-flex flex-column align-items-center">
          <img class="d-block mt-2" width="150" src="https://www.logolynx.com/images/logolynx/4b/4beebce89d681837ba2f4105ce43afac.png"></img>
          <p>Empleado</p>
        </div>
        <div class="d-flex flex-column align-items-center">
          
            <ul class="nav flex-column w-100">
              <li class="nav-item" style="background: #ffa8a8;">
                <a class="nav-link active" href="#">Inicio</a>
              </li>
              <li class="nav-item border" style="background: #fae3e3;">
                <a class="nav-link disabled" href="#">Mensajes</a>
              </li>
              <li class="nav-item border" style="background: #ffa8a8;">
                <a class="nav-link active" href="#">Solicitudes</a>
              </li>
              <li class="nav-item border" style="background: #ffa8a8;">
                <a class="nav-link active" href="#">Personal</a>
              </li>
              <li class="nav-item border" style="background: rgb(252, 121, 121)">
                <a class="nav-link" href="#">Cerrar sesion</a>
              </li>
            </ul>
          
        </div>
      </div>
      <div class="col-9 py-5">
        <div class="text-center">
          <h1>LISTA DE MENSAJES</h1>
        </div>
        <div class="container">
          <table
            class="table table-dark table-hover table-striped table-bordered"
          >
            <thead>
              <tr>
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">DNI</th>
                <th scope="col">Tel√©fono</th>
                <th scope="col">Correo</th>
                <th scope="col">Motivo</th>
                <th scope="col">Comentarios</th>
              </tr>
            </thead>
            <tbody>
              <% data && data.forEach(function(user){ %>
              <tr>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.dni %></td>
                <td><%= user.telephone %></td>
                <td><%= user.email %></td>
                <td><%= user.reason %></td>
                <td><%= user.comments %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
